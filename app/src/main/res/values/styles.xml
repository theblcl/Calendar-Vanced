<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme (defined in themes.xml) -->
    <!-- Do not duplicate theme definitions here -->

    <!-- Widget Styles -->
    <style name="Widget.CalendarApp.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:background">?attr/colorSurface</item>
        <item name="android:elevation">4dp</item>
    </style>

    <style name="Widget.CalendarApp.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="titleTextColor">?attr/colorOnSurface</item>
        <item name="subtitleTextColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <!-- Navigation Drawer Styles -->
    <style name="Widget.CalendarApp.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="itemTextAppearance">@style/TextAppearance.CalendarApp.NavigationItem</item>
        <item name="itemIconTint">?attr/colorOnSurfaceVariant</item>
        <item name="itemTextColor">?attr/colorOnSurface</item>
    </style>

    <!-- Text Appearance Styles -->
    <style name="TextAppearance.CalendarApp.NavigationItem" parent="TextAppearance.Material3.LabelLarge">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.CalendarApp.EventTitle" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.CalendarApp.EventTime" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="TextAppearance.CalendarApp.EventDescription" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

    <style name="TextAppearance.CalendarApp.DateHeader" parent="TextAppearance.Material3.TitleMedium">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.CalendarApp.MonthHeader" parent="TextAppearance.Material3.TitleLarge">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Card Styles -->
    <style name="Widget.CalendarApp.Card" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">3dp</item>
        <item name="cardBackgroundColor">?attr/colorSurface</item>
    </style>

    <style name="Widget.CalendarApp.Card.Event" parent="Widget.CalendarApp.Card">
        <item name="cardCornerRadius">12dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
    </style>

    <!-- Button Styles -->
    <style name="Widget.CalendarApp.Button" parent="Widget.Material3.Button">
        <item name="cornerRadius">8dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Widget.CalendarApp.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="cornerRadius">8dp</item>
        <item name="android:textStyle">bold</item>
        <item name="strokeWidth">2dp</item>
    </style>

    <style name="Widget.CalendarApp.Button.Text" parent="Widget.Material3.Button.TextButton">
        <item name="android:textStyle">bold</item>
    </style>

    <!-- FloatingActionButton Style -->
    <style name="Widget.CalendarApp.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="shapeAppearance">@style/ShapeAppearance.CalendarApp.SmallComponent</item>
    </style>

    <!-- Shape Styles -->
    <style name="ShapeAppearance.CalendarApp.SmallComponent" parent="ShapeAppearance.Material3.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <style name="ShapeAppearance.CalendarApp.MediumComponent" parent="ShapeAppearance.Material3.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <!-- Input Field Styles -->
    <style name="Widget.CalendarApp.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- Switch Style -->
    <style name="Widget.CalendarApp.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <!-- Uses theme colors by default -->
    </style>

    <!-- Dialog Styles -->
    <style name="Widget.CalendarApp.Dialog" parent="ThemeOverlay.Material3.Dialog">
        <item name="colorSurface">?attr/colorSurface</item>
        <item name="colorOnSurface">?attr/colorOnSurface</item>
    </style>

    <!-- Calendar specific styles -->
    <style name="Widget.CalendarApp.CalendarDay" parent="">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">?attr/selectableItemBackground</item>
        <item name="android:textAppearance">@style/TextAppearance.Material3.BodyLarge</item>
    </style>

    <!-- Loading indicator style -->
    <style name="Widget.CalendarApp.CircularProgressIndicator" parent="Widget.Material3.CircularProgressIndicator">
        <item name="indicatorColor">?attr/colorPrimary</item>
        <item name="trackColor">?attr/colorSurfaceVariant</item>
    </style>

    <!-- Divider style -->
    <style name="Widget.CalendarApp.Divider" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?attr/colorOutline</item>
    </style>

    <!-- Settings specific styles -->
    <style name="Widget.CalendarApp.SettingsCard" parent="Widget.CalendarApp.Card">
        <item name="cardElevation">2dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="TextAppearance.CalendarApp.SettingsTitle" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textColor">?attr/colorOnSurface</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.CalendarApp.SettingsSubtitle" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textColor">?attr/colorOnSurfaceVariant</item>
    </style>

</resources>