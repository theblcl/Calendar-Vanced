<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="8dp"
    android:gravity="top"
    android:background="?android:attr/colorBackground">

    <!-- Compact date display with proper colors -->
    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:paddingHorizontal="8dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/text_day_of_week"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="THU"
            android:textSize="14sp"
            android:textColor="#FF9800"
            android:textStyle="normal"
            android:textAllCaps="true"
            android:layout_marginBottom="4dp"
            android:shadowRadius="0"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowColor="#00000000"
            style="@android:style/TextAppearance"
            android:fontFamily="sans-serif" />

        <TextView
            android:id="@+id/text_day_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="28sp"
            android:textColor="#FF9800"
            android:shadowRadius="0"
            android:shadowDx="0"
            android:shadowDy="0"
            android:shadowColor="#00000000"
            style="@android:style/TextAppearance"
            android:fontFamily="sans-serif-medium" />

    </LinearLayout>

    <!-- Events container - better aligned with date -->
    <LinearLayout
        android:id="@+id/events_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginTop="8dp">

        <!-- Events will be added here programmatically -->

    </LinearLayout>

</LinearLayout>