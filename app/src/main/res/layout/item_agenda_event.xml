<?xml version="1.0" encoding="utf-8"?>
<!-- Event layout aligned to the top with date header -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingStart="8dp"
    android:paddingEnd="16dp"
    android:paddingTop="0dp"
    android:paddingBottom="4dp"
    android:gravity="top">

    <!-- Space for date (same width as date header + margin) -->
    <View
        android:layout_width="72dp"
        android:layout_height="1dp" />

    <!-- Event content takes remaining space -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Card layout for timed events -->
        <androidx.cardview.widget.CardView
            android:id="@+id/event_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardUseCompatPadding="false"
            app:cardBackgroundColor="?attr/colorSurface"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:visibility="visible"
            android:layout_marginBottom="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="12dp"
                android:minHeight="50dp"
                android:gravity="center_vertical">

                <!-- Color indicator strip -->
                <View
                    android:id="@+id/color_indicator"
                    android:layout_width="4dp"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="12dp"
                    android:background="#4285F4" />

                <!-- Event content -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_event_title"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Team Meeting"
                        android:textSize="16sp"
                        android:textColor="?attr/colorOnSurface"
                        android:textStyle="bold"
                        android:maxLines="2"
                        android:ellipsize="end" />

                    <TextView
                        android:id="@+id/text_event_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:00 AM - 11:00 AM"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="2dp" />

                    <TextView
                        android:id="@+id/text_event_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Weekly standup meeting"
                        android:textSize="12sp"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginTop="2dp"
                        android:maxLines="1"
                        android:ellipsize="end"
                        android:visibility="gone" />

                </LinearLayout>

                <!-- Duration badge -->
                <TextView
                    android:id="@+id/text_event_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1h"
                    android:textSize="10sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:background="@drawable/duration_background"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:layout_marginStart="8dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Line item layout for all-day events -->
        <LinearLayout
            android:id="@+id/event_line"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="8dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:visibility="gone"
            android:layout_marginBottom="4dp">

            <!-- Color indicator strip -->
            <View
                android:id="@+id/color_indicator_line"
                android:layout_width="4dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="12dp"
                android:background="#4285F4" />

            <!-- Event content -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_event_title_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="All Day Event"
                    android:textSize="14sp"
                    android:textColor="?attr/colorOnSurface"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/text_event_description_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Event description"
                    android:textSize="12sp"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginTop="2dp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:visibility="gone" />

            </LinearLayout>

            <TextView
                android:id="@+id/text_all_day_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All day"
                android:textSize="10sp"
                android:textColor="?attr/colorPrimary"
                android:background="@drawable/all_day_background"
                android:paddingHorizontal="6dp"
                android:paddingVertical="2dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>